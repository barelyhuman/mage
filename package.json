{
  "name": "@barelyhuman/mage",
  "version": "0.1.0",
  "description": "stateful + logical abstraction layer for react",
  "keywords": [
    "nohook",
    "react"
  ],
  "repository": "barelyhuman/mage",
  "funding": "https://github.com/sponsors/barelyhuman",
  "license": "MIT",
  "author": {
    "name": "reaper",
    "email": "ahoy@barelyhuman.dev"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./core/dist/index.mjs",
      "module": "./core/dist/index.mjs",
      "require": "./core/dist/index.js",
      "types": "./core/dist/index.d.ts"
    }
  },
  "main": "./core/dist/index.js",
  "module": "./core/dist/index.mjs",
  "types": "./core/dist/core/index.d.ts",
  "files": [
    "core/dist/**",
    "package.json"
  ],
  "scripts": {
    "fix": "eslint --fix .",
    "build": "pnpm run build -r",
    "examples:01_minimal": "DIR=01_minimal EXT=js webpack serve",
    "examples:02_basic_api": "DIR=02_basic_api EXT=js webpack serve",
    "next": "bumpp",
    "nuke": "find . -name 'node_modules' -type d -prune | xargs rm -rf",
    "release": "np",
    "test": "ava",
    "version": "npm run build"
  },
  "prettier": "@barelyhuman/prettier-config",
  "ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"require": [
			"tsm"
		]
	},
  "devDependencies": {
    "@antfu/ni": "0.16.2",
    "@ava/typescript": "^3.0.1",
    "@barelyhuman/mage": "workspace:*",
    "@barelyhuman/prettier-config": "1.1.0",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^17.0.45",
    "@types/react": "^18.0.17",
    "@typescript-eslint/parser": "^5.28.0",
    "ava": "^4.2.0",
    "browser-env": "^3.3.0",
    "bumpp": "^8.2.1",
    "del-cli": "^4.0.1",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "html-webpack-plugin": "^5.5.0",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.7.0",
    "tsm": "^2.2.2",
    "tsup": "6.2.2",
    "typescript": "^4.7.4",
    "valtio": "^1.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "xo": "^0.48.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "valtio": "^1.6.3"
  },
  "packageManager": "pnpm@6.32.25",
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
