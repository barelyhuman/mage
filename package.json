{
	"name": "@barelyhuman/mage",
	"version": "0.0.0",
	"description": "stateful + logical abstraction layer for react",
	"license": "MIT",
	"repository": "barelyhuman/mage",
	"funding": "https://github.com/sponsors/barelyhuman",
	"author": {
		"name": "reaper",
		"email": "ahoy@barelyhuman.dev"
	},
	"main":"dist/index.js",
	"module":"dist/index.js",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./package.json":"./package.json",
		".":{
			"import":"./dist/index.js",
			"require":"./dist/index.js",
			"default":"./dist/index.js"
		}
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del-cli dist && tsc && npm test",
		"test": "xo && ava",
		"release": "np",
		"version": "npm run build",
		"next": "bumpp"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"nohook",
		"react"
	],
	"devDependencies": {
		"@mvllow/tsconfig": "^0.1.0",
		"@types/node": "^17.0.45",
		"@types/react": "^18.0.17",
		"ava": "^4.2.0",
		"bumpp": "^8.2.1",
		"del-cli": "^4.0.1",
		"np": "^7.6.1",
		"prettier": "^2.6.2",
		"react": "^18.2.0",
		"ts-node": "^10.7.0",
		"typescript": "^4.7.4",
		"valtio": "^1.6.3",
		"xo": "^0.48.0"
	},
	"prettier": {
		"bracketSpacing": false,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"xo": {
		"prettier": true
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"valtio": "^1.6.3"
	}
}
