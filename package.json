{
	"name": "@barelyhuman/mage",
	"version": "0.1.0",
	"description": "stateful + logical abstraction layer for react",
	"license": "MIT",
	"repository": "barelyhuman/mage",
	"funding": "https://github.com/sponsors/barelyhuman",
	"author": {
		"name": "reaper",
		"email": "ahoy@barelyhuman.dev"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del-cli dist && tsc && npm test",
		"test": "ava",
		"release": "np",
		"version": "npm run build",
		"next": "bumpp",
		"examples:01_minimal": "DIR=01_minimal EXT=js webpack serve",
		"examples:02_basic_api": "DIR=02_basic_api EXT=js webpack serve"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"nohook",
		"react"
	],
	"devDependencies": {
		"@mvllow/tsconfig": "^0.1.0",
		"@testing-library/react": "^13.3.0",
		"@types/node": "^17.0.45",
		"@types/react": "^18.0.17",
		"ava": "^4.2.0",
		"browser-env": "^3.3.0",
		"bumpp": "^8.2.1",
		"del-cli": "^4.0.1",
		"html-webpack-plugin": "^5.5.0",
		"np": "^7.6.1",
		"prettier": "^2.6.2",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.7.0",
		"tsm": "^2.2.2",
		"typescript": "^4.7.4",
		"valtio": "^1.6.3",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.8.1",
		"xo": "^0.48.0"
	},
	"prettier": {
		"bracketSpacing": false,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"xo": {
		"prettier": true
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"require": [
			"tsm"
		]
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"valtio": "^1.6.3"
	}
}
